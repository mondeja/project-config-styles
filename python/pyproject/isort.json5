{
  rules: [
    {
      files: ["pyproject.toml"],
      JMESPathsMatch: [
        ["type(tool)", "object"],
        ["type(tool.isort)", "object"],

        ["tool.isort.lines_after_imports", 2],
        ["tool.isort.multi_line_output", 3],
        ["tool.isort.use_parentheses", true],
        ["tool.isort.combine_as_imports", true],
        ["tool.isort.include_trailing_comma", true],
        ["tool.isort.known_tests", "tests"],
        ["tool.isort.remove_redundant_aliases", true],

        // future imports must be the first section or the
        // next SyntaxError will be raised at runtime:
        // SyntaxError: from __future__ imports must occur at the beginning of the file
        [
          "tool.isort.sections[0]",
          "FUTURE",
          "deepmerge(@, {tool: {isort: {sections: op(['FUTURE'], '+', op(tool.isort.sections, '|', `[]`))}}})",
        ],

        [
          "op(tool.isort.sections, '>', ['STDLIB', 'THIRDPARTY', 'FIRSTPARTY', 'TESTS', 'LOCALFOLDER'])",
          true,
        ],
      ],
    },
  ],
}
