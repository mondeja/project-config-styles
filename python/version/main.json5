{
  extends: [
    "_min-38.json5",
    "_min-39.json5",
    "_max-310.json5",
    "_max-311.json5",
    "_max-312.json5",
  ],
  rules: [
    {
      files: ["pyproject.toml"],
      hint: "project.classifiers must not contain a classifier for Python 4",
      JMESPathsMatch: [
        [
          "length(project.classifiers[?starts_with(@, 'Programming Language :: Python :: 4')])",
          0,
        ],
      ],
    },
    {
      files: [".pre-commit-config.yaml"],
      hint: "pyupgrade pre-commit hook must contain command line arguments",
      JMESPathsMatch: [
        [
          "contains(keys(repos[?repo=='https://github.com/asottile/pyupgrade'] | [0].hooks[0]), 'args')",
          true,
        ],
      ],
    },
    {
      files: ["pyproject.toml"],
      hint: 'tool.isort object must contain "py_version" and "extra_standard_library" keys',
      JMESPathsMatch: [
        ["type(tool.isort)", "object"],
        [
          "op(keys(tool.isort), '>', ['py_version', 'extra_standard_library'])",
          true,
        ],
      ],
    },
    {
      /**
       * project.classifiers
       **/
      files: ["pyproject.toml"],
      JMESPathsMatch: [
        [
          "contains(project.classifiers, 'Programming Language :: Python :: 3.10')",
          true,
        ],
        [
          "contains(project.classifiers, 'Programming Language :: Python :: 3.7')",
          false,
        ],
        [
          "contains(project.classifiers, 'Programming Language :: Python :: 3.6')",
          false,
        ],
      ],
    },
  ],
}
