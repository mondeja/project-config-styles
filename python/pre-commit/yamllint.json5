{
  extends: ["../../base/yamllint.json5"],
  rules: [
    {
      // Use yamllint via pre-commit
      files: [".pre-commit-config.yaml"],
      JMESPathsMatch: [
        ["length(repos[?repo=='https://github.com/adrienverge/yamllint'])", 1],
        [
          // the 'rev' key must match the vX.Y.Z regex pattern
          "regex_match('^v\\d+\\.\\d+\\.\\d+$', repos[?repo=='https://github.com/adrienverge/yamllint'] | [0].rev)",
          true,
        ],
        [
          "repos[?repo=='https://github.com/adrienverge/yamllint'] | [0].hooks[0].id",
          "yamllint",
        ],

        // add `-c .yamllint.yaml` arguments for specify our custom '.yaml' extension
        // filename (see extended style)
        [
          "repos[?repo=='https://github.com/adrienverge/yamllint'] | [0].hooks[0].args[0]",
          "-c",
        ],
        [
          "repos[?repo=='https://github.com/adrienverge/yamllint'] | [0].hooks[0].args[1]",
          ".yamllint.yaml",
        ],
      ],
    },
  ],
}
