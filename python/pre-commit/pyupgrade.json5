{
  rules: [
    {
      files: [".pre-commit-config.yaml"],
      JMESPathsMatch: [
        // All Python projects must use pyupgrade
        ["length(repos[?repo=='https://github.com/asottile/pyupgrade'])", 1],
        [
          // the 'rev' key must match the vX.Y.Z regex pattern
          "regex_match('^v\\d+\\.\\d+\\.\\d+$', repos[?repo=='https://github.com/asottile/pyupgrade'] | [0].rev)",
          true,
        ],
        [
          "repos[?repo=='https://github.com/asottile/pyupgrade'] | [0].hooks[0].id",
          "pyupgrade",
        ],
        [
          // the 'name' key must not be defined because pyupgrade hook name
          // is 'pyupgrade' by default
          "repos[?repo=='https://github.com/asottile/pyupgrade'] | [0].hooks[0].name",
          null,
        ]
      ]
    }
  ]
}
