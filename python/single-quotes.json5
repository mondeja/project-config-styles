{
  extends: [
    "pre-commit/add-trailing-comma.json5",
    "pre-commit/autopep8.json5",
    "pre-commit/double-quote-string-fixer.json5",
  ],
  rules: [
    {
      files: ["pyproject.toml"],
      JMESPathsMatch: [
        ["contains(keys(@), 'tool')", true],
        ["contains(keys(tool), 'flakeheaven')", true],
        ['tool.flakeheaven."inline-quotes"', "single"],
      ],
    },
  ],
}
