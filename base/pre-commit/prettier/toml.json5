{
  rules: [
    {
      // Use prettier to format TOML files
      files: [".pre-commit-config.yaml"],
      JMESPathsMatch: [
        [
          "contains(repos[?repo=='https://github.com/pre-commit/mirrors-prettier'] | [0].hooks[0].types_or, 'toml')",
          true,
        ],
        [
          // Add 'prettier-plugin-toml' to format TOML files
          "contains(repos[?repo=='https://github.com/pre-commit/mirrors-prettier'] | [0].hooks[0].additional_dependencies, 'prettier-plugin-toml')",
          true,
        ],
      ],
    },
  ],
}
