{
  rules: [
    {
      files: [".pre-commit-config.yaml"],
      hint: "The project-config pre-commit hook is not updated. Run 'pre-commit autoupdate' to fix this",
      JMESPathsMatch: [
        [
          "op(repos[?repo=='https://github.com/mondeja/project-config'] | [0].rev, '==', gh_tags('mondeja', 'project-config')[0])",
          true,
        ],
      ],
    },
    {
      files: [".pre-commit-config.yaml"],
      JMESPathsMatch: [
        [
          "length(repos[?repo=='https://github.com/mondeja/project-config'])",
          1,
        ],
        [
          "contains(repos[?repo=='https://github.com/mondeja/project-config'] | [0].hooks[*].id, 'project-config')",
          true,
        ],
      ],
    },
  ],
}
